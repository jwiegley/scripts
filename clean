#!/usr/bin/env bash

dryrun=false
if [[ $1 == "-n" ]]; then
    dryrun=true
    shift 1
fi

find "$@" \(                                    \
          \( -type d                            \
             \( -name '.ghc.*'                  \
             -o -name '.cargo'                  \
             -o -name '.cargo-home'             \
             -o -name '.coq-native'             \
             -o -name '.direnv'                 \
             -o -name '.mypy_cache'             \
             -o -name '.venv'                   \
             -o -name '.rustup'                 \
             -o -name '.ghcup'                  \
             -o -name 'MAlonzo'                 \
             -o -name 'dist'                    \
             -o -name 'dist-newstyle'           \
             -o -name 'node_modules'            \
             -o -name 'ghc[0-9_]*'              \
             -o -name 'target'                  \
             -o -name '__pycache__'             \
             -o -name '.pytest_cache'           \
             \)                                 \
          \)                                    \
       -o \( -type f                            \
             \( -name '.ghc.*'                  \
             -o -name '.*emacs-dev*'            \
             -o -name '*.agdai'                 \
             -o -name '*.cma'                   \
             -o -name '*.cmi'                   \
             -o -name '*.cmo'                   \
             -o -name '*.cmx'                   \
             -o -name '*.cmxa'                  \
             -o -name '*.cmxs'                  \
             -o -name '*.elc'                   \
             -o -name '*.glob'                  \
             -o -name '*.hi'                    \
             -o -name '.lia.cache'              \
             -o -name '.lra.cache'              \
             -o -name '.nia.cache'              \
             -o -name '.nra.cache'              \
             -o -name '*.lia-cache'             \
             -o -name '*.lra-cache'             \
             -o -name '*.nia-cache'             \
             -o -name '*.nra-cache'             \
             -o -name '*.v.d'                   \
             -o -name '*.v.tex'                 \
             -o -name '*.vio'                   \
             -o -name '*.vo'                    \
             -o -name '*.vok'                   \
             -o -name '*.vos'                   \
             -o -name '*~'                      \
             -o -name '.*.aux'                  \
             -o -name '.Makefile.coq.d'         \
             -o -name '.envrc.cache'            \
             -o -name 'Makefile.coq'            \
             -o -name 'Makefile.coq.conf'       \
             -o -name 'cabal.project.local*'    \
             \)                                 \
          \)                                    \
       -o \( -type l                            \
             \( -name 'result'                  \
             -o -name 'result-*'                \
             \)                                 \
          \)                                    \
       \)                                       \
    -print0 |                                   \
    if [[ $dryrun == true ]]; then              \
        parallel -0 ls -ld;                     \
    else                                        \
        parallel -0 --xargs /bin/rm -fr;        \
    fi
