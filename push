#!/bin/bash

serial=false
fullsync=true
while getopts 'LNnvDQSsFfcCj:h:' opt; do
    case $opt in
        N)  OPTS="$OPTS -N" ;;
        c)  OPTS="$OPTS -c $OPTARG" ;;
        C)  OPTS="$OPTS --checksum" ;;
        f)  OPTS="$OPTS -f $OPTARG" ;;
        s)  OPTS="$OPTS -c sync" ;;
        Q)  OPTS="$OPTS -c quick" ;;
        S)  serial=true ;;
        F)  fullsync=false ;;
        j)  OPTS="$OPTS -j$OPTARG" ;;
        h)  OPTS="$OPTS --from $OPTARG" ;;
        n)  OPTS="$OPTS -n" ;;
        v)  OPTS="$OPTS -v" ;;
        D)  OPTS="$OPTS -D" ;;
        \?) OPTS="$OPTS -$OPTARG" ;;
    esac
done
shift $(($OPTIND - 1))

if [[ -z "$1" ]]; then
    test -d /Volumes/Files   && diskutil eject /Volumes/Files
    test -d /Volumes/Hackage && diskutil eject /Volumes/Hackage
fi

LOCAL=$(ipaddr bond0 2> /dev/null)
if [[ -z "$LOCAL" ]]; then
    LOCAL=$(ipaddr en8 2> /dev/null)
fi
if [[ -z "$LOCAL" ]]; then
    LOCAL=$(ipaddr en0 2> /dev/null)
fi
if [[ -z "$LOCAL" ]]; then
    LOCAL=$(ipaddr en1 2> /dev/null)
fi

if [[ "$LOCAL" == $HERA_ETHERNET ]]; then
    JOBS=-j22
    laptop=false
    LOCAL=hera

    if ssh clio true; then
        found=true
        REMOTE=clio
        OPTS="--from $LOCAL $OPTS"
    else
        echo Cannot find clio
        exit 1
    fi
else
    JOBS=-j18
    laptop=true
    LOCAL=clio

    if ssh hera true; then
        found=true
        REMOTE=hera
        OPTS="--from $LOCAL $OPTS"
    else
        echo Cannot find hera
        exit 1
    fi
fi


if [[ -z "$1" ]]; then
    if [[ $found = false ]]; then
        echo "Could not find remote!"
        exit 1
    elif ! ssh $REMOTE true; then
        echo "Error: Could not reach host $REMOTE"
        exit 1
    fi

    echo "Local is named $LOCAL"
    echo "Remote is named $REMOTE"
elif [[ "$1" != "$REMOTE" ]]; then
    REMOTE=""
fi

if [[ "$1" == hera || (-n "$REMOTE" && ($REMOTE == hera || $REMOTE == home)) ]]; then
    ARGS="$ARGS $REMOTE"
    OPTS="$OPTS -j8"
    if [[ $fullsync == false ]]; then
        OPTS="$OPTS -c sync"
    fi

elif [[ "$1" == clio || (-n "$REMOTE" && ($REMOTE == clio || $REMOTE == cliow)) ]]; then
    ARGS="$ARGS $REMOTE"
    OPTS="$OPTS -j8"
    if [[ $fullsync == false ]]; then
        OPTS="$OPTS -c sync"
    fi

elif [[ "$1" == athena || (-n "$REMOTE" && $REMOTE == athena || $REMOTE == build) ]]; then
    ARGS="$ARGS $REMOTE"
    OPTS="$OPTS -j8"
    if [[ $fullsync == false ]]; then
        OPTS="$OPTS -c sync"
    fi

fi

echo pushme $OPTS $ARGS "$@"

pushme --config $HOME/.config/pushme \
       --si --ssh="ssh -A -F $HOME/.ssh/config" \
       --rsync=~/.nix-profile/bin/rsync $OPTS $ARGS "$@"

### pushme ends here
